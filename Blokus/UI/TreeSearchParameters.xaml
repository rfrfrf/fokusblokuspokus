<UserControl x:Class="Blokus.UI.TreeSearchParameters"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Margin="3">Max głębokość poszukiwań:</TextBlock>
        <TextBox Margin="3" Grid.Row="1" Text="{Binding MaxDepth}" />
        <TextBlock Margin="3" Grid.Row="2">Max rząd drzewa:</TextBlock>
        <TextBox Margin="3" Grid.Row="3" Text="{Binding MaxTreeRank}" />
    </Grid>
</UserControl>
